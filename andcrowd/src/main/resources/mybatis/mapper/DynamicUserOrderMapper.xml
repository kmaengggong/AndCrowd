<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fiveis.andcrowd.repository.DynamicUserOrderRepository">
    <update id="createDynamicUserOrderTable">
        CREATE
        TABLE IF NOT EXISTS ${tableName}(
            u_order_id INT AUTO_INCREMENT PRIMARY KEY,
            order_id INT NOT NULL
        )
    </update>

    <select id="findAll" parameterType="String" resultType="com.fiveis.andcrowd.dto.DynamicUserOrderDTO$Find">
        SELECT
            u_order_id as uOrderId,
            order_id as orderId
        FROM
            ${tableName}
    </select>

    <select id="findById" parameterType="map" resultType="com.fiveis.andcrowd.dto.DynamicUserOrderDTO$Find">
        SELECT
            u_order_id as uOrderId,
            order_id as orderId
        FROM
            ${tableName}
        WHERE
            u_order_id = #{uOrderId}
    </select>

    <insert id="save" parameterType="map">
        INSERT
        INTO
            ${tableName}
            (u_order_id, order_id)
        VALUES
            (#{dynamicUserOrder.uOrderId}, #{dynamicUserOrder.orderId})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE
        FROM
            ${tableName}
        WHERE
            u_order_id = #{uOrderId}
    </delete>
</mapper>